{
  "compilerOptions": {
    /* Output */
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "rootDir": "src",

    /* Modules & target */
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "types": ["node", "jest"],

    /* Strictness */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    /* Lint-like checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,

    /* Emit helpers */
    "importHelpers": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,

    /* Paths â€“ makes `import "spyro-sdk-js"` work from examples/tests */
    "baseUrl": ".",
    "paths": {
      "spyro-sdk-js": ["src"]
    }
  },

  "include": [
    "src/**/*",
    "tests/**/*",
    "examples/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts"          // unit-test stubs generated by typechain (if any)
  ]
}
